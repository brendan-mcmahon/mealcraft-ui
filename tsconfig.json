{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "composite": true,
    "types": ["react", "vite/client", "node"]
  },
  "include": ["src", "src/**/*.ts"],
  "exclude": ["node_modules"]
}
